{
  "name": "likeme-back-end",
  "version": "1.0.0",
  "description": "Backend API para o aplicativo LikeMe - Saúde e Bem-estar",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "node api/index.js",
    "dev:local": "ts-node -r tsconfig-paths/register src/server.ts",
    "build": "prisma generate && tsc && tsc-alias && node scripts/generate-swagger.js",
    "build:check": "npm run build && node -e \"console.log('✅ Build verificado com sucesso')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "vercel:dev": "npx vercel dev",
    "vercel:deploy": "npx vercel",
    "vercel:prod": "npx vercel --prod",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "health",
    "wellness",
    "api",
    "nodejs",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "LikeMe Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-auth-session": "^7.0.8",
    "expo-crypto": "^15.0.7",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^6.18.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
