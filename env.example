# Database - Supabase
# Connect to Supabase via connection pooling (para aplicação)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database (usado para migrations)
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-1-us-east-1.pooler.supabase.com:5432/postgres"

# Opção alternativa: Use SUPABASE_PROJECT_URL + SUPABASE_DB_PASSWORD (a DATABASE_URL será construída automaticamente)
# Você pode obter a senha em: Settings > Database > Database password
SUPABASE_DB_PASSWORD="your-database-password"
SUPABASE_USE_POOLING="true"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# Email (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:19006"

# API Documentation
API_DOCS_PATH="/api-docs"
# API Base URL (opcional - usado para Swagger em produção. Se não definido, usa VERCEL_URL ou localhost)
# API_BASE_URL="https://your-production-domain.com"

# Supabase
SUPABASE_PROJECT_URL="https://your-project-ref.supabase.co"
SUPABASE_API_KEY="your-supabase-anon-key"
SUPABASE_DB_PASSWORD="your-database-password"
SUPABASE_USE_POOLING="true"

# Auth0 Configuration
AUTH0_DOMAIN="dev-ifwxyydb3sdagewa.us.auth0.com"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"
AUTH0_AUDIENCE="your-auth0-audience"

# Social.plus Configuration
SOCIAL_PLUS_API_KEY="your-social-plus-api-key"
SOCIAL_PLUS_REGION="US"
SOCIAL_PLUS_BASE_URL="https://api.social.plus"
