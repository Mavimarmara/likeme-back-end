# Database - Supabase
# Opção 1: Configure DATABASE_URL diretamente (se já tiver a connection string completa)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# Opção 2: Use SUPABASE_PROJECT_URL + SUPABASE_DB_PASSWORD (a DATABASE_URL será construída automaticamente)
# Você pode obter a senha em: Settings > Database > Database password
SUPABASE_DB_PASSWORD="your-database-password"
SUPABASE_USE_POOLING="true"  # true para usar pooling (recomendado), false para connection direta

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# Email (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:19006"

# API Documentation
API_DOCS_PATH="/api-docs"

# Supabase
SUPABASE_PROJECT_URL="https://your-project-ref.supabase.co"
SUPABASE_API_KEY="your-supabase-anon-key"
